{
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "extra-label": "beta-release",
  "include-v-in-tag": true,
  "packages": {
    ".": {
      "component": "beta",
      "release-type": "simple",
      "changelog-path": "deploy/versions/CHANGELOG-beta.md",
      "version-file": "deploy/versions/version-beta.txt",
      "pull-request-title-pattern": "chore(beta): release ${version} to beta"
    }
  }
}
