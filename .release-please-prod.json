{
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "extra-label": "prod-release",
  "include-v-in-tag": true,
  "packages": {
    ".": {
      "draft-pull-request": true,
      "component": "prod",
      "release-type": "simple",
      "changelog-path": "deploy/versions/CHANGELOG-prod.md",
      "version-file": "deploy/versions/version-prod.txt",
      "pull-request-title-pattern": "chore(manifests): release ${version} to PROD"
    }
  }
}
